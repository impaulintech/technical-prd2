generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Status {
  todo
  in_progress
  done
}

enum Priority {
  low
  medium
  high
}

model Board {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  color       String?
  tasks       Task[]
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt
}

model Task {
  id          Int       @id @default(autoincrement())
  board_id    Int
  board       Board     @relation(fields: [board_id], references: [id], onDelete: Cascade)
  title       String
  description String?
  status      Status
  assigned_to String?
  priority    Priority?
  due_date    DateTime?
  created_at  DateTime  @default(now())
  updated_at  DateTime  @updatedAt

  @@index([board_id])
}
